@model BrandsModel
@{
    ViewData["Title"] = "Edit Brand";
}
<style>
    .action-buttons {
        display: flex;
        justify-content: space-between; /* Căn nút về hai phía */
        align-items: center;
        margin-top: 10px; /* Khoảng cách từ phần trên */
    }

        .action-buttons .btn {
            border-radius: 5px; /* Bo góc cho nút */
        }
</style>

<h2 class="text-center my-4">Sửa thương hiệu</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin thương hiệu</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Tên sản phẩm -->
                        <div class="mb-3">
                            <label for="Name" class="form-label">Tên thương hiệu</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>

                        <!-- Mô tả -->
                        <div class="mb-3">
                            <label for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả danh mục"></textarea>
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>
                        <!-- Trạng thái -->
                        <div class="mb-3">
                            <label for="BrandId" class="form-label">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">-- Sử dụng --</option>
                                <option value="0">-- Không sử dụng --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger" />
                        </div>

                        <!-- Nút hành động -->
                        <div class="action-buttons">
                            <a asp-action="Index" asp-controller="Product" class="btn btn-warning">
                                <i class="fa fa-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-check"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

