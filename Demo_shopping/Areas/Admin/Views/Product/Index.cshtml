@model IEnumerable<Demo_shopping.Models.ProductsModel>
@{
    ViewData["title"] = "Product_Listed";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3 class="mb-0">Danh sách sản phẩm</h3>
            <a asp-area="Admin" asp-action="Create" asp-controller="Product"
               class="btn btn-primary btn-rounded px-4 py-2 d-flex align-items-center"
               style="border-radius: 4px; margin-bottom: 10px">
                <i class="fas fa-plus-circle me-2"></i> Thêm sản phẩm
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-sm text-start align-middle table-bordered table-hover mb-0">

                <thead>
                    <tr class="text-dark">
                        <th scope="col">#</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Mô tả sản phẩm</th>
                        <th scope="col">Giá</th>
                        <th scope="col">Danh mục</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Thương hiệu</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Category?.Name</td>
                            <td><img src="~/images/@product.Image" width="120"></td>
                            <td>@product.Slug</td>
                            <td>@product.Brand?.Name</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Product" asp-route-Id="@product.Id" class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-Id="@product.Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">
                                    <i class="fa fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
