@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["title"] = "List Role";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3 class="mb-0">Danh sách vai trò</h3>
            <a asp-action="Create" asp-controller="Roles"
               class="btn btn-primary btn-rounded px-4 py-2 d-flex align-items-center"
               style="border-radius: 4px; margin-bottom: 10px">
                <i class="fas fa-plus-circle me-2"></i> Thêm vai trò
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-sm text-start align-middle table-bordered table-hover mb-0">

                <thead>
                    <tr class="text-dark">
                        <th scope="col">#</th>
                        <th scope="col">Vai trò</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = Model.Count();
                    }
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@role.NormalizedName</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Roles" asp-route-Id="@role.Id" class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-controller="Roles" asp-route-Id="@role.Id" class="btn btn-sm btn-danger confirmDeletion">
                                    <i class="fa fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                        index--;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
