@model UserModel
@{
    ViewData["Title"] = "Login";
}
<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<!-- Tên tài khoản -->
						<div class="mb-3">
							<label for="UserName" class="form-label">Tên tài khoản</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<!-- Password -->
						<div class="mb-3">
							<label for="Password" class="form-label">Mật khẩu</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						
						<button class="btn btn-default">Login</button>
						<!-- Nút tạo tài khoản -->
						<button asp-action="Create" asp-controller="Account" class="btn btn-secondary px-4 py-2" >
							<i class="fa fa-user-plus"></i> Tạo tài khoản mới
						</button>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
